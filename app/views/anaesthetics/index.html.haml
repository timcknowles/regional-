%p#notice= notice
%h1 Anaesthetics
%table.table
  %thead
    %tr
      %th Patient
      %th Doctor
      %th grade
      %th Date and time
      %th Intevention
      %th Indication
      %th No attempts
      %th Complications
      %th{:colspan => "3"}
  %tbody
    - @anaesthetics.each do |anaesthetic|
      %tr
        %td= anaesthetic.patient.full_name
        %td= anaesthetic.doctor.full_name
        %td= anaesthetic.doctor.grade
        %td= anaesthetic.date_and_time
        %td= anaesthetic.intevention
        %td= anaesthetic.indication
        %td= anaesthetic.no_attempts
        %td= anaesthetic.complications
        %td= link_to 'Show', anaesthetic
        %td= link_to 'Edit', edit_anaesthetic_path(anaesthetic)
        %td= link_to 'Destroy', anaesthetic, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Anaesthetic', new_anaesthetic_path

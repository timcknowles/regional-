= form_tag patients_path, :method => 'get' do
  %p
    = label_tag(:first_name, "First Name:")
    = text_field_tag :first_name, params[:first_name]
    = label_tag(:last_name, "Last Name:")
    = text_field_tag :last_name, params[:last_name]
    = submit_tag "Search", :name => nil


%p#notice= notice
%h1 Patients



%table.table.table-striped
  %thead
    %tr
      %th Patient name
      %th DOB:
      %th NHS NO:
      %th MRN

      %th{:colspan => "3"}
  %tbody
    - @patients.each do |patient|


      %tr
        %td= patient.full_name
        %td= patient.DOB
        %td= patient.NHS_No
        %td= patient.MRN
        %td= link_to 'add/view anaesthetics', patient_anaesthetics_path(patient_id: patient), :class => 'btn btn-mini btn-primary'
        %td= link_to 'Follow Up', patient_follow_ups_path(patient_id: patient), :class => 'btn btn-mini btn-primary'
        %td= link_to 'Show', patient, :class => 'btn btn-mini btn-success'
        %td= link_to 'Edit', edit_patient_path(patient), :class => 'btn btn-mini btn-warning'
        %td= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger'
%br/
= link_to 'New Patient', new_patient_path
